[NetDev]
Name={{ tunnel.name }}
Kind={{ tunnel.kind }}
{% if "mtu_bytes" in tunnel -%}
MTUBytes={{ tunnel.mtu_bytes }}
{% endif %}

{% if tunnel.kind in ["ipip", "sit", "gre", "gretap", "ip6gre", "ip6gretap", "vti", "vti6", "iptnl"] %}
[Tunnel]
{% if "local" in tunnel -%}
Local={{ tunnel.local }}
{% endif %}
{% if "remote" in tunnel -%}
Remote={{ tunnel.remote }}
{% endif %}
{% if "ttl" in tunnel -%}
TTL={{ tunnel.ttl }}
{% endif %}
{% endif %}
