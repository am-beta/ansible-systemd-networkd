---
exclude_paths:
  - .cache
  - .github
  - .tox
  - "**/vars/main.yml"
  - workflow-support/lint_paths.yml
  - workflow-support/ci_paths.yml
  - workflow-support/parameter_mapping.yml

skip_list:
  - galaxy[no-changelog]
  - galaxy[version-incorrect]
  - meta-runtime[unsupported-version]
  - name[casing]
  - name[play]
  - no-changed-when
  - template-instead-of-copy
  - unnamed-task
  - var-naming[no-role-prefix]
  - var-spacing
  - yaml[line-length]
