%YAML 1.2
---
exclude_paths:
  - .cache
  - .github
  - .tox
  - "**/vars/main.yml"
  - workflow-support/lint_paths.yml
  - workflow-support/ci_paths.yml

skip_list:
  - meta-runtime[unsupported-version]
  - name[casing]
  - name[play]
  - no-changed-when
  - template-instead-of-copy
  - unnamed-task
  - var-spacing
  - yaml[line-length]
  - galaxy[version-incorrect]
  - galaxy[no-changelog]

kinds:
  - playbook: "**/workflow-support/*.yml"
